api_fqdn "api.cinc-server.dev"

topology "standalone"
<% node['provisioning']['cinc-server-config'].each_pair do |k, v| %>
<%= k%>=<%= v%>
<% end %>

<% if node['oc_id'] %>
oc_id['administrators'] ||= <%= node['oc_id']['administrators'] || [] %>
oc_id['applications'] ||= {}
  <% node['oc_id']['applications'].each do |app_name, redirect_uri| %>
oc_id['applications']['<%= app_name %>'] = {
  'redirect_uri' => '<%= redirect_uri %>'
}
  <% end %>
<% end %>
